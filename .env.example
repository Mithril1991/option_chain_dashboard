# Environment Configuration for Option Chain Dashboard
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control - .env.example is for documentation only

# ============================================================================
# APPLICATION MODE
# ============================================================================

# DEMO_MODE: Toggle between mock data and real Yahoo Finance data
# Set to 'true' to use simulated option chain data for testing/demo
# Set to 'false' to fetch real data from Yahoo Finance API
# Default: true
DEMO_MODE=true

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# BACKEND_URL: The base URL of the backend API server
# This is where the dashboard sends requests for data and calculations
# Format: http://[host]:[port]
# Default: http://192.168.1.16:8061
# Examples:
#   - http://localhost:8061          (local development)
#   - http://192.168.1.16:8061       (LAN/internal network)
#   - https://api.example.com:8061   (remote server with HTTPS)
BACKEND_URL=http://192.168.1.16:8061

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# LOG_LEVEL: Control the verbosity of application logging
# INFO:    Standard logging - shows important events and errors
# DEBUG:   Verbose logging - includes detailed trace information
# WARNING: Only warnings and errors
# Default: INFO
LOG_LEVEL=INFO

# ============================================================================
# LLM INTEGRATION (OPTIONAL)
# ============================================================================

# ANTHROPIC_API_KEY: API key for Claude/Anthropic LLM
# Optional - required only if you want to use Claude for option explanations
# Get your key from: https://console.anthropic.com
# Leave blank to disable Claude integration
ANTHROPIC_API_KEY=

# OPENAI_API_KEY: API key for OpenAI LLM (alternative to Anthropic)
# Optional - required only if you want to use ChatGPT for explanations
# Get your key from: https://platform.openai.com
# Leave blank to disable OpenAI integration
# Note: Either ANTHROPIC_API_KEY or OPENAI_API_KEY can be used, not both
OPENAI_API_KEY=

# ============================================================================
# FINANCIAL CALCULATIONS
# ============================================================================

# RISK_FREE_RATE: The annual risk-free rate used in option pricing models
# This is typically the yield on US Treasury bonds
# Expressed as a decimal (0.05 = 5%)
# Common values:
#   - 0.05 (5%)  - typical long-term average
#   - 0.045 (4.5%) - recent historical rate
#   - 0.02 (2%)  - lower bound
#   - 0.08 (8%)  - higher bound
# Default: 0.05
RISK_FREE_RATE=0.05
